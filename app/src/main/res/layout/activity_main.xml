<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ins.kalkulatorgeometri.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pilih Bangun datar"
        android:textSize="24sp"/>

    <Spinner
        android:id="@+id/spinnerr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:entries="@array/pilihbangundatar"
         />

    <EditText
        android:id="@+id/input_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:hint="input1" />

    <EditText
        android:id="@+id/input_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:hint="input2" />

    <Button
        android:id="@+id/tombol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Hitung Bangun"
        android:onClick="btnHitung"
        />

    <TextView
        android:id="@+id/luas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luas dari bangun datar    :"
        android:textSize="18sp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        />
    <TextView
        android:id="@+id/hasilluas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/keliling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keliling dari bangun datar :"
        android:textSize="18sp" />



    <TextView
        android:id="@+id/hasilkeliling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />


</LinearLayout>
